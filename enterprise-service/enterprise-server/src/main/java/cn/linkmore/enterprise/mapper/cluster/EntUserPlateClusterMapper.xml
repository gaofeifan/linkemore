<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linkmore.enterprise.dao.cluster.EntUserPlateClusterMapper">
  <resultMap id="BaseResultMap" type="cn.linkmore.enterprise.entity.EntUserPlate">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="plate_no" jdbcType="VARCHAR" property="plateNo" />
    <result column="mobile" jdbcType="VARCHAR" property="mobile" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, plate_no, mobile, create_user_id, create_user_name, create_time
  </sql>
  <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_ent_user_plate
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="findPage" parameterType="java.util.HashMap" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_ent_user_plate
	where 
     1 = 1
     	<if test="mobile != null">
    		and mobile like #{mobile}
    	</if>
    	<if test="plateNo != null">
    		and plate_no like #{plateNo}
    	</if>
    	<if test="property==null">
			order by id desc
		</if>
		<if test="property!=null">
			order by ${property} ${direction}
		</if>
	 limit  #{start,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
  </select>
  
    <select id="count" parameterType="java.util.HashMap" resultType="java.lang.Integer">
    select 
   	 count(1)
    from t_ent_user_plate
	where 
     1 = 1
     	<if test="mobile != null">
    		and mobile like #{mobile}
    	</if>
    	<if test="plateNo != null">
    		and plate_no like #{plateNo}
    	</if>
  </select>
  
  <select id="exists" parameterType="java.lang.String" resultType="java.lang.Integer">
    select  count(1) from t_ent_user_plate
	where  1 = 1 and plate_no = #{plateNo}
  </select>
  
  
</mapper>