<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linkmore.prefecture.dao.cluster.AdminUserClusterMapper">
  <resultMap id="BaseResultMap" type="cn.linkmore.prefecture.response.ResAdminUser">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="cellphone" jdbcType="VARCHAR" property="cellphone" />
    <result column="realname" jdbcType="VARCHAR" property="realname" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="login_time" jdbcType="TIMESTAMP" property="loginTime" />
    <result column="status" jdbcType="SMALLINT" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    id, cellphone, realname, create_time, update_time, login_time, status
  </sql>
  <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_admin_user
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="findByMobile" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_admin_user
    where cellphone = #{mobile}
  </select>
  <select id="findAll"  resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_admin_user
  </select>
  
  <select id="findPage" resultMap="BaseResultMap" parameterType="java.util.HashMap" >
  	select 
  	<include refid="Base_Column_List" />
	from t_admin_user
	where 1=1 
	<if test="cellphone!=null">  
    and cellphone like #{cellphone}
    </if> 
	<if test="realname!=null">  
    and realname like #{realname}
    </if> 
    <if test="status!=null">  
    and status = #{status}
    </if> 
    <if test="property==null">  
    order by create_time desc
    </if>
    <if test="property!=null">  
    order by  ${property} ${direction}
    </if>
    limit  #{start},#{pageSize}
  </select>
  <select id="count"  resultType="java.lang.Integer">
    select count(1)
    from t_admin_user 
    where 1 = 1  
    <if test="cellphone!=null">  
    and cellphone like #{cellphone}
    </if> 
	<if test="realname!=null">  
    and realname like #{realname}
    </if> 
    <if test="status!=null">  
    and status = #{status}
    </if>  
  </select>
  <select id="check"  resultType="java.lang.Integer">
    select count(1)
    from t_admin_user 
    where ${property} = #{value}  
    and id != #{id} 
  </select>
</mapper>