<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linkmore.prefecture.dao.cluster.PrefectureClusterMapper">
  <resultMap id="BaseResultMap" type="cn.linkmore.prefecture.entity.Prefecture">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="strategy_id" jdbcType="BIGINT" property="strategyId" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="district_id" jdbcType="BIGINT" property="districtId" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="latitude" jdbcType="DECIMAL" property="latitude" />
    <result column="longitude" jdbcType="DECIMAL" property="longitude" />
    <result column="route_guidance" jdbcType="VARCHAR" property="routeGuidance" />
    <result column="image_url" jdbcType="VARCHAR" property="imageUrl" />
    <result column="stall_total" jdbcType="INTEGER" property="stallTotal" />
    <result column="sold_times" jdbcType="INTEGER" property="soldTimes" />
    <result column="date_contract" jdbcType="TIMESTAMP" property="dateContract" />
    <result column="valid_time" jdbcType="TIMESTAMP" property="validTime" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="route_description" jdbcType="VARCHAR" property="routeDescription" />
    <result column="base_dict_id" jdbcType="BIGINT" property="baseDictId" />
    <result column="city_id" jdbcType="BIGINT" property="cityId" />
    <result column="order_index" jdbcType="INTEGER" property="orderIndex" />
    <result column="leave_time" jdbcType="INTEGER" property="leaveTime" />
    <result column="charge_price" jdbcType="VARCHAR" property="chargePrice" />
    <result column="charge_time" jdbcType="INTEGER" property="chargeTime" />
    <result column="type" jdbcType="SMALLINT" property="type" />
    <result column="enterprise_id" jdbcType="BIGINT" property="enterpriseId" />
    <result column="category" jdbcType="SMALLINT" property="category" />
    <result column="limit_status" jdbcType="SMALLINT" property="limitStatus" />
    <result column="gateway" jdbcType="VARCHAR" property="gateway" />
  </resultMap>
  
  <resultMap id="ResPrefectureDetailMap" type="cn.linkmore.prefecture.response.ResPrefectureDetail">
  	<id column="id" property="id"/>
  	<result column="name" property="name" />
  	<result column="leisure_stall" property="leisureStall" />
  	<result column="address" property="address" />
  	<result column="first_hour" property="firstHour" />
  	<result column="timely_Long" property="timelyLong" />
  	<result column="free_mins" property="freeMins" />
  	<result column="timely_unit" property="timelyUnit" />
  	<result column="limit_status" property="limitStatus" />
  	<result column="type" property="type" />
  </resultMap>
  
  <resultMap id="ResPrefectureMap" type="cn.linkmore.prefecture.response.ResPrefecture">
  	<id column="id" property="id" />
  	<result column="name" property="preName" />
  	<result column="leisure_stall" property="leisureStall" />
  	<result column="latitude" property="latitude" />
  	<result column="longitude" property="longitude" />
  	<result column="type" property="type" />
  	<result column="limit_status" property="limitStatus" />
  </resultMap>
  
  <resultMap id="ResPrefectureListMap" type="cn.linkmore.prefecture.response.ResPrefectureList">
  	<id column="id" property="id"/>
  	<result column="name" property="name" />
  	<result column="leisure_stall" property="leisureStall" />
  	<result column="address" property="address" />
  	<result column="first_hour" property="firstHour" />
  	<result column="timely_Long" property="timelyLong" />
  	<result column="free_mins" property="freeMins" />
  	<result column="timely_unit" property="timelyUnit" />
  	<result column="limit_status" property="limitStatus" />
  	<result column="type" property="type" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, strategy_id, status, name, district_id, address, latitude, longitude, route_guidance, 
    image_url, stall_total, sold_times, date_contract, valid_time, create_time, update_time, 
    route_description, base_dict_id, city_id, order_index, leave_time, charge_price, 
    charge_time, type, enterprise_id, category, limit_status, gateway
  </sql>
  <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from v_prefecture
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="findPrefectureById" resultMap="ResPrefectureDetailMap" parameterType="java.lang.Long">
  	select p.id,p.name,p.address,b.free_mins,b.timely_unit,p.charge_price first_hour,p.charge_time timely_Long,p.type,p.limit_status
	from v_prefecture p 
	LEFT JOIN v_strategy_base b on b.id = p.strategy_id
	where p.id = #{id}
  </select>
  
  <select id="findPreByStatusAndGPS" resultMap="ResPrefectureMap" parameterType="java.util.Map">
    select p.id,p.name,p.latitude,p.longitude,p.type,p.limit_status
	from v_prefecture p 
	where p.status = #{status} and (p.type is null or p.type = 0 )
    and p.category = 0
  </select>
  
  <select id="findPreByStatusAndGPS1" resultMap="ResPrefectureMap" parameterType="java.util.Map">
    select p.id,p.name,p.latitude,p.longitude,p.type,p.limit_status
	from v_prefecture p 
	where p.status = #{status} 
    and p.category != 0
  </select>
  
  <select id="findPreListByCityId" resultMap="ResPrefectureListMap" parameterType="java.util.Map">
  	select p.id,p.name,p.address,b.free_mins,b.timely_unit,p.charge_price first_hour,
  		p.charge_time timely_Long,p.type,p.limit_status
	from v_prefecture p 
	LEFT JOIN v_strategy_base b on b.id = p.strategy_id
	where p.status = #{status} and p.city_id = #{cityId}
	and (p.type is null or p.type = 0 )
    and p.category = 0
	ORDER BY p.order_index DESC
  </select>
  
  <select id="findPreListByCityId1" resultMap="ResPrefectureListMap" parameterType="java.util.Map">
  	select p.id,p.name,p.address,b.free_mins,b.timely_unit,p.charge_price first_hour,
  		p.charge_time timely_Long,p.type,p.limit_status
	from v_prefecture p 
	LEFT JOIN v_strategy_base b on b.id = p.strategy_id
	where p.status = #{status} and p.city_id = #{cityId} 
    and p.category != 0
	ORDER BY p.order_index DESC
  </select>
  
</mapper>