  <resultMap id="BaseResultMap" type="cn.linkmore.prefecture.entity.Stall" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="stall_name" property="stallName" jdbcType="VARCHAR" />
    <result column="sell_count" property="sellCount" jdbcType="INTEGER" />
    <result column="pre_id" property="preId" jdbcType="BIGINT" />
    <result column="gateway_id" property="gatewayId" jdbcType="BIGINT" />
    <result column="radar" property="radar" jdbcType="VARCHAR" />
    <result column="lock_id" property="lockId" jdbcType="BIGINT" />
    <result column="lock_sn" property="lockSn" jdbcType="VARCHAR" />
    <result column="lock_status" property="lockStatus" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="stall_local" property="stallLocal" jdbcType="VARCHAR" />
    <result column="route_guidance" property="routeGuidance" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="image_url" property="imageUrl" jdbcType="VARCHAR" />
    <result column="lock_battery" property="lockBattery" jdbcType="INTEGER" />
    <result column="bind_order_status" property="bindOrderStatus" jdbcType="INTEGER" />
  </resultMap>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, stall_name, sell_count, pre_id, gateway_id, radar, lock_id, lock_sn, lock_status, 
    status, stall_local, route_guidance, create_time, update_time, image_url, lock_battery, bind_order_status
    from v_stall
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, stall_name, sell_count, pre_id, gateway_id, radar, lock_id, lock_sn, lock_status, 
    status, stall_local, route_guidance, create_time, update_time, image_url, lock_battery, bind_order_status
    from v_stall
  </select>
  <select id="getByStatus" resultType="Stall" parameterType="java.lang.Integer" >
    select id, stall_name, sell_count, pre_id, gateway_id, radar, lock_id, lock_sn, lock_status, 
    status, stall_local, route_guidance, create_time, update_time, image_url, lock_battery, bind_order_status
    from v_stall
    where status = #{status}
  </select>
  
