  <select id="getByLockSn" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select id, stall_name, sell_count, pre_id, gateway_id, radar, lock_id, lock_sn, lock_status, 
    status, stall_local, route_guidance, create_time, update_time, image_url, lock_battery
    from v_stall
    where lock_sn = #{lockSn,jdbcType=VARCHAR}
  </select>
  
  <select id="getPreFreeStall" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, stall_name, sell_count, pre_id, gateway_id, radar, lock_id, lock_sn, lock_status, 
    status, stall_local, route_guidance, create_time, update_time, image_url, lock_battery
    from v_stall
    where pre_id = #{preId,jdbcType=BIGINT} and status = 1 limit 0,1
  </select>
  
  <select id="getCountByPreId" parameterType="java.lang.Long" resultType="java.lang.Integer">
  	select count(*) from v_stall where pre_id = #{preId}
